<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | Spotify LLM Recommendations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <style>
    body {
      background-color: #121212;
      color: #fff;
      font-family: 'Montserrat', sans-serif;
    }
    .navbar {
      background-color: #191414;
    }
    .card {
      background-color: #191414;
      border: 1px solid #333;
      border-radius: 10px;
      margin-bottom: 20px;
    }
    .card-header {
      background-color: rgba(29, 185, 84, 0.1);
      border-bottom: 1px solid #333;
      color: #1DB954;
    }
    .btn-spotify {
      background-color: #1DB954;
      color: white;
      border: none;
    }
    .btn-spotify:hover {
      background-color: #1ed760;
      color: white;
    }
    .list-group-item {
      background-color: #191414;
      border-color: #333;
      color: #fff;
    }
    .profile-img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
    }
    .artist-img, .album-img {
      width: 60px;
      height: 60px;
      border-radius: 5px;
      object-fit: cover;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="bi bi-spotify me-2"></i>
        Spotify LLM Recommendations
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/spotify/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/recommendations">Recommendations</a>
          </li>
        </ul>
        <div class="d-flex align-items-center">
          <% if (user.imageUrl) { %>
            <img src="<%= user.imageUrl %>" alt="Profile" class="profile-img me-2">
          <% } else { %>
            <i class="bi bi-person-circle me-2 fs-4"></i>
          <% } %>
          <span class="me-3"><%= user.name %></span>
          <a href="/auth/logout" class="btn btn-outline-light btn-sm">
            <i class="bi bi-box-arrow-right me-1"></i> Logout
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4">
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-body text-center">
            <h2>Welcome, <%= user.name %>!</h2>
            <p class="lead">Here's an overview of your music profile based on Spotify data</p>
            <a href="/recommendations" class="btn btn-spotify">
              <i class="bi bi-lightbulb me-1"></i> Get Personalized Recommendations
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Top Artists -->
    <div class="row mb-4">
      <div class="col-md-6">
        <div class="card h-100">
          <div class="card-header">
            <h5 class="mb-0">
              <i class="bi bi-person-badge me-2"></i> Your Top Artists
            </h5>
          </div>
          <ul class="list-group list-group-flush">
            <% topArtists.slice(0, 5).forEach(artist => { %>
              <li class="list-group-item d-flex align-items-center">
                <% if (artist.images && artist.images.length > 0) { %>
                  <img src="<%= artist.images[0].url %>" alt="<%= artist.name %>" class="artist-img me-3">
                <% } else { %>
                  <div class="artist-img me-3 bg-secondary d-flex align-items-center justify-content-center">
                    <i class="bi bi-person"></i>
                  </div>
                <% } %>
                <div>
                  <h6 class="mb-0"><%= artist.name %></h6>
                  <small class="text-muted">
                    <%= artist.genres.slice(0, 3).join(', ') %>
                  </small>
                </div>
              </li>
            <% }); %>
          </ul>
        </div>
      </div>

      <!-- Top Tracks -->
      <div class="col-md-6">
        <div class="card h-100">
          <div class="card-header">
            <h5 class="mb-0">
              <i class="bi bi-music-note me-2"></i> Your Top Tracks
            </h5>
          </div>
          <ul class="list-group list-group-flush">
            <% topTracks.slice(0, 5).forEach(track => { %>
              <li class="list-group-item d-flex align-items-center">
                <% if (track.album.images && track.album.images.length > 0) { %>
                  <img src="<%= track.album.images[0].url %>" alt="<%= track.name %>" class="album-img me-3">
                <% } else { %>
                  <div class="album-img me-3 bg-secondary d-flex align-items-center justify-content-center">
                    <i class="bi bi-music-note"></i>
                  </div>
                <% } %>
                <div>
                  <h6 class="mb-0"><%= track.name %></h6>
                  <small class="text-muted">
                    <%= track.artists.map(a => a.name).join(', ') %>
                  </small>
                </div>
              </li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>

    <!-- Recently Played -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">
              <i class="bi bi-clock-history me-2"></i> Recently Played
            </h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-dark table-hover">
                <thead>
                  <tr>
                    <th>Track</th>
                    <th>Artist</th>
                    <th>Album</th>
                    <th>Played At</th>
                  </tr>
                </thead>
                <tbody>
                  <% recentlyPlayed.forEach(item => { %>
                    <tr>
                      <td><%= item.track.name %></td>
                      <td><%= item.track.artists.map(a => a.name).join(', ') %></td>
                      <td><%= item.track.album.name %></td>
                      <td><%= new Date(item.played_at).toLocaleString() %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>