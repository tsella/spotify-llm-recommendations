<%- include('partials/header', { title: 'Error' }) %>

<!-- Main Content -->
<div class="container">
  <div class="error-container">
    <div class="error-icon">
      <i class="bi bi-exclamation-triangle"></i>
    </div>
    <h1 class="mb-4">Oops! Something went wrong</h1>
    <div class="alert alert-danger mb-4">
      <%= message || 'An unexpected error occurred.' %>
    </div>
    <p class="mb-4">
      Don't worry, you can try again or return to the home page.
    </p>
    <div class="d-flex justify-content-center gap-3">
      <a href="/" class="btn btn-spotify">
        <i class="bi bi-house me-2"></i> Home
      </a>
      <button onclick="window.history.back()" class="btn btn-outline-light">
        <i class="bi bi-arrow-left me-2"></i> Go Back
      </button>
    </div>
  </div>
</div>

<%- include('partials/footer') %>