<%- include('partials/header', { title: 'Home' }) %>

<% if (isLoggedIn && typeof user !== 'undefined') { %>
  <%- include('partials/navbar', { active: 'home', user: user }) %>
<% } else { %>
  <!-- Simple navbar for logged-out users -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="bi bi-spotify me-2"></i>
        Spotify LLM Recommendations
      </a>
    </div>
  </nav>
<% } %>

<div class="container mt-5">
  <div class="hero text-center p-5 mb-5">
    <h1 class="display-3 fw-bold">Spotify LLM Recommendations</h1>
    <p class="lead fs-4">Discover new music tailored to your taste with AI-powered recommendations</p>
    <% if (!isLoggedIn) { %>
      <a href="/auth/login" class="btn btn-spotify btn-lg mt-3">
        <i class="bi bi-spotify me-2"></i> Login with Spotify
      </a>
    <% } else { %>
      <a href="/spotify/dashboard" class="btn btn-spotify btn-lg mt-3">Go to Dashboard</a>
    <% } %>
  </div>

  <div class="row mb-5">
    <div class="col-md-4 mb-4">
      <div class="feature-card text-center">
        <div class="feature-icon">
          <i class="bi bi-music-note-list"></i>
        </div>
        <h3>Smart Analysis</h3>
        <p>Our app analyzes your Spotify listening habits to understand your unique music taste</p>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="feature-card text-center">
        <div class="feature-icon">
          <i class="bi bi-robot"></i>
        </div>
        <h3>AI-Powered</h3>
        <p>Advanced language models generate personalized music recommendations just for you</p>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="feature-card text-center">
        <div class="feature-icon">
          <i class="bi bi-hand-thumbs-up"></i>
        </div>
        <h3>Feedback System</h3>
        <p>Like or dislike recommendations to help improve future suggestions</p>
      </div>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-md-6 mb-4">
      <div class="feature-card text-center">
        <div class="feature-icon">
          <i class="bi bi-disc"></i>
        </div>
        <h3>Themed Playlists</h3>
        <p>Create curated playlists based on any mood, activity, or style that matches your taste</p>
      </div>
    </div>
    <div class="col-md-6 mb-4">
      <div class="feature-card text-center">
        <div class="feature-icon">
          <i class="bi bi-shuffle"></i>
        </div>
        <h3>Multiple LLM Support</h3>
        <p>Choose from various LLMs for recommendations: OpenAI, Claude, Gemini, Grok, or local Ollama</p>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>